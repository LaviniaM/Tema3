@model IEnumerable<Tema.Models.TicketRepository>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Adauga bilet nou", "Create")
        <br>
    
    </p>
    <table class="table">
        <tr>
            <th>
              Titlul Spectacolului
            </th>
            <th>
               Rand
            </th>
            <th>
                Numar
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titluSpectacol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numar)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
    <br>

    @Html.ActionLink("Exporta lista bilete in format CSV(pe Desktop)", "Export", new { id = 1})
    <br>
    @Html.ActionLink("Exporta lista bilete in format JSON(pe Desktop)", "Export", new { id = 2 })
</body>
</html>
